<table class="w3-table-all w3-hoverable">
    <thead>
        <tr class="w3-gray">
            <th>Food Track</th>
            <th>Servings Goal</th>
            <th>Week</th>
            <th>Progress</th>
            <th>Completed</th>
        </tr>
    </thead>
    <tbody>
    {{#if dashboard}}
        {{#each dashboard.goals}}
        <tr>
            <td>{{this.category}}</td> <!-- {/{userObj.userID}/} -->
            {{!-- clickable button on click display object data --}}
            <td>{{this.goal}}</td> <!-- {/{userObj.currTrack}/} -->
            <td>{{this.week}}</td> <!-- {/{userObj.currWeek}/} -->
            <td onload="progress_Bar()">
                <div class="w3-light-grey">
                <div id="curr_prog" class="w3-container w3-blue curr_prog" style="height:20px; width:0px">
                    <!-- {/{foodObj.count}/} -->
                    <span class="count">{{this.logs.length}}</span>/<span class="goal">{{this.goal}}</span>
                </div>
                </div>
            </td>
            <td onload="check_Star()"><div id="star_complete"></div></td>
        </tr>
            {{#each logs}}
                <tr>
                    <td class="nutrition"><h4>{{this.item}}</h4></td>
                    {{!-- <td>Short Description : ({{this.food.short_desc}})</td> --}}
                </tr>
                <tr>
                    <td>Serving Size (GmWt): {{this.food.servingSize}} </td>
                    <td>Calories (Energ_Kcal): {{this.food.calories}}</td>
                </tr> 
                <tr>
                    <td>Gram Weight: {{this.food.gramWeight}}</td>
                    <td>Protein (g): {{this.food.protein}}</td>
                </tr>
                <tr>
                    <td>Fat (g): {{this.food.totalFat}}</td>
                    <td>sugar (g): {{this.food.sugar}}</td>
                </tr> 
                <tr>
                    <td>Vitamin C (mg): {{this.food.vitaminC}}</td>
                    <td>Sodium (mg): {{this.food.sodium}}</td>
                </tr>

            {{/each}}
        {{/each}}
    {{/if}}
    </tbody>
</table>
{{#unless dashboard.goals}}
    <h2>No logs yet. Get Started!</h2>
{{/unless}}
<div class="w3-sidebar w3-bar-block w3-card-2 w3-animate-left" style="display:none" id="mySidebar">
  <button class="w3-bar-item w3-button w3-large" onclick="sideBar_Close()">Close &times;</button>
  {{#if user}}
    <a href="/trackPage/{{user.username}}" class="w3-bar-item w3-button">Choose a Track</a>
    <a href="/addLog/{{user.username}}" class="w3-bar-item w3-button">Input Today's Data</a>
    <a href="/dashboard" class="w3-bar-item w3-button">See the Community Dashboard</a>
  {{/if}}
</div>

<div zclass="w3-main" id="sidebar">

  <div class="w3-jumbo">
    <div id="hamb_cont">
      <button id="dashboard_hamburger" class="w3-button w3-bisque w3-large" onclick="sideBar_Open()"><img id="logo" src="/images/yyLogo" alt=""></button>
    </div>

    <div class="w3-container">
      {{#if user}}
      <h1>Welcome Back <span id="username">{{user.username}}</span>!</h1>
      {{!-- <span id="firstname">{{user.first_name}}</span> --}}
      {{/if}}
    </div>
  </div>

  <br>
  <br>

  <div class="w3-container">
    <div class="w3-row">
      <a href="/logout"><button type="submit" class="w3-button w3-red loginBtn">Logout</button></a>
    </div>
    <div class="w3-row">
      <div class="w3=responsive">
          {{> input}}
      </div>
    </div>
  </div>
</div>
{{> footer}}

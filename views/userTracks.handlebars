{{#if user}}

  <div class="w3-container w3-center w3-text-blue">
    <form action="/addTrack/{{user.username}}" method="post" class="w3-panel w3-card-4">
        {{!-- for an actual user, will only display the tracks/goals they've signed up for; populate with goals table category --}}
        <label for="moment" id="momentLabel"></label>
        <input type="hidden" name="week" id="moment" required>
        <input type="hidden" name="username" value={{user.username}} id="username">
        <input type="hidden" name="UserId" value={{user.id}} id="user_Id" required>
        <label><h4>Select your track:</h4></label>
        <select name="category" id="trackName" required>
            {{!-- add available tracks here --}}
            <option value="" disabled selected id="optMsg">Choose your track</option>
            <option value="vegetables" id="vegetables">Track my Veggies</option>
            <option value="fruits" id="fruits">Track my Fruits</option>
            {{!-- if a track is in the database already, mark it as disabled --}}
        </select>
        <label><h4>Set a goal</h4></label>
        <input type="number" placeholder="(i.e 10 servings)" name="goal" id="goalInput" required>
        <span> Servings per week</span>
        {{!-- add a clearfix --}}
        <div></div>
        <br>
        <button type="submit">Submit category</button>
    </form>
  </div>
{{/if}}

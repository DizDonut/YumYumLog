<div class="bgimg w3-display-container w3-animate-opacity w3-text-blue">
    <h1 class="w3-jumbo w3-animate-top w3-center">Yum Yum Log</h1>
    <h4 class="w3-animate-top w3-center">Choose a Track.  Set a Goal.  Achieve Results.</h4>
    <div class="w3-row">
        <div class="w3-col s6 w3-mobile">
          <!-- action="/" method="POST" -->
            <form class="w3-panel w3-card-4">
              <h2 style="text-align: center">Returning User?</h2>
                <h3><label>Username</label></h3>
                    <input class="w3-input" type="text" id="username" name="user" pattern="[a-zA-Z\s]{0,30}" title="Alphabet Characters Only" required>
                <h3><label>Password</label></h3>
                    <input class="w3-input" type="text" id="password" name="pwd" pattern="[a-zA-Z\s]{0,30}" title="Alphabet Characters Only" required>
                <button type="submit" class="w3-button w3-red loginBtn">Login</button>
            </form>
        </div>
        <div class="w3-col s6 w3-mobile">
          <!-- action="/" method="POST" -->
          <form class="w3-panel w3-card-4">
            <h2 style="text-align: center">New User?</h2>
            <h3><label>First Name</label></h3>
              <input class="w3-input" type="text" id="reg_fn" name="reg_first" pattern="[a-zA-Z\s]{0,30}" title="Alphabet Characters Only" required>
              <h3><label>Last Name</label></h3>
                <input class="w3-input" type="text" id="reg_ln" name="reg_last" pattern="[a-zA-Z\s]{0,30}" title="Alphabet Characters Only" required>
            <h3><label>Username</label></h3>
              <input class="w3-input" type="text" id="reg_username" name="reg_user" pattern="[a-zA-Z\s]{0,30}" title="Alphabet Characters Only" required>
            <h3><label>Password</label></h3>
              <input class="w3-input" type="text" id="reg_password" name="reg_pwd" pattern="[a-zA-Z\s]{0,30}" title="Alphabet Characters Only" required>
            <h3><label>Confirm Password</label></h3>
              <input class="w3-input" type="text" id="reg_password" name="reg_pwd_conf" pattern="[a-zA-Z\s]{0,30}" title="Alphabet Characters Only" required>
            <button type="submit" class="w3-button w3-red regBtn">Register</button>
          </form>
        </div>
    </div>
</div>
